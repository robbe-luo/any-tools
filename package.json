{
  "name": "any-tools-monorepo",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "postinstall": "simple-git-hooks",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "release": "npm run release --workspace=@any-tools/boilerplate-simple && release-it",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robbe-luo/any-tools.git"
  },
  "homepage": "https://github.com/robbe-luo/any-tools",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./templates/*"
  ],
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "release-it": "^17.0.1",
    "simple-git-hooks": "^2.9.0",
    "vitest": "^1.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ]
  },
  "release-it": {
    "increment": false,
    "git": {
      "tag": false,
      "commit": false,
      "requireCleanWorkingDir": false
    },
    "npm": {
      "publish": false
    }
  }
}
