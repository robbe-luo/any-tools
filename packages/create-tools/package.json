{
  "name": "create-any-tools",
  "version": "0.1.0-beta.1",
  "description": "create new project tools",
  "keywords": [
    "new project",
    "tools"
  ],
  "type": "module",
  "author": "robbe-luo",
  "license": "MIT",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "create-tools": "./bin/index.js"
  },
  "scripts": {
    "dev": "unbuild --stub",
    "prepublish": "npm run build",
    "build": "unbuild",
    "release": "release-it"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robbe-luo/any-tools.git",
    "directory": "packages/create-tools"
  },
  "bugs": {
    "url": "https://github.com/robbe-luo/any-tools/issues"
  },
  "homepage": "https://github.com/robbe-luo/any-tools#readme",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/minimist": "^1.2.5",
    "@types/prompts": "^2.4.9",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "unbuild": "^2.0.0"
  },
  "release-it": {
    "git": {
      "push": false
    },
    "hooks": {
      "before:init": "git fetch --prune --prune-tags origin",
      "after:bump": "echo 更新版本成功"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md",
        "header": "# Changelog",
        "ignoreRecommendedBump": true,
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {}
        ]
      }
    }
  },
  "dependencies": {
    "axios": "^1.6.5",
    "chalk": "^5.3.0",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2",
    "registry-url": "^6.0.1"
  }
}
